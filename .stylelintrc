{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-empty-line-before": [
      "always",
      {
        "except": [
          "blockless-after-blockless",
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "at-rule-no-unknown": null,
    "color-hex-length": "long",
    "declaration-empty-line-before": "never",
    "font-family-no-missing-generic-family-keyword": null,
    "length-zero-no-unit": null,
    "no-descending-specificity": null,
    "number-leading-zero": "always",
    "selector-pseudo-class-no-unknown": null,
    "order/properties-order": [
      "position",
      "z-index",
      "top",
      "right",
      "bottom",
      "left",
      "display",
      "visibility",
      "opacity",
      "flex",
      "flex-direction",
      "flex-wrap",
      "justify-content",
      "align-items",
      "align-self",
      "vertical-align",
      "overflow",
      "overflow-x",
      "overflow-y",
      "box-sizing",
      "order",
      "max-width",
      "min-width",
      "width",
      "max-height",
      "min-height",
      "height",
      "padding",
      "padding-top",
      "padding-right",
      "padding-bottom",
      "padding-left",
      "margin",
      "margin-top",
      "margin-right",
      "margin-bottom",
      "margin-left",
      "border",
      "border-top",
      "border-right",
      "border-bottom",
      "border-left",
      "border-width",
      "border-radius",
      "border-color",
      "border-style",
      "box-shadow",
      "outline",
      "outline-width",
      "outline-style",
      "outline-color",
      "outline-offset",
      "text-align",
      "text-justify",
      "text-decoration",
      "text-decoration-style",
      "text-decoration-line",
      "text-decoration-color",
      "text-overflow",
      "text-shadow",
      "text-transform",
      "font",
      "font-family",
      "font-size",
      "font-style",
      "font-variant",
      "font-weight",
      "line-height",
      "letter-spacing",
      "color",
      "background",
      "background-image",
      "background-color",
      "background-repeat",
      "background-position",
      "background-size",
      "background-attachment",
      "transform",
      "transform-style",
      "transform-origin",
      "animation",
      "animation-name",
      "animation-duration",
      "animation-timing-function",
      "animation-delay",
      "animation-iteration-count",
      "animation-direction",
      "animation-fill-mode",
      "animation-play-state",
      "transition",
      "transition-property",
      "transition-duration",
      "transition-timing-function",
      "transition-delay",
      "content",
      "cursor",
      "pointer-events",
      "user-select"
    ],
    "order/order": [
      {
        "type": "at-rule",
        "name": "extend",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "center",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "img",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "font",
        "hasBlock": false
      },
      "declarations",
      {
        "type": "rule",
        "selector": "&:hover"
      },
      {
        "type": "rule",
        "selector": "&:active"
      },
      {
        "type": "rule",
        "selector": "&:focus"
      },
      {
        "type": "rule",
        "selector": "&:visited"
      },
      {
        "type": "rule",
        "selector": "&:checked"
      },
      {
        "type": "rule",
        "selector": "^&:out-of-range|^&:r(e(ad-(only|write)))"
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "tablet",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "laptop",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "desktop",
        "hasBlock": true
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "retina",
        "hasBlock": true
      },
      {
        "type": "rule",
        "selector": "&::before"
      },
      {
        "type": "rule",
        "selector": "&::after"
      },
      {
        "type": "rule",
        "selector": "^&::\\w"
      },
      {
        "type": "rule",
        "selector": "^&:first-(child|of-type)"
      },
      {
        "type": "rule",
        "selector": "^&:nth-((last-)*(child|of-type))"
      },
      {
        "type": "rule",
        "selector": "^&:last-(child|of-type)"
      },
      {
        "type": "rule",
        "selector": "^&:o(nly-(child|of-type))"
      },
      {
        "type": "rule",
        "selector": "^&_[^_][\\w'-]+"
      },
      {
        "type": "rule",
        "selector": "^&\\."
      },
      {
        "type": "rule",
        "selector": "^&__"
      },
      {
        "type": "rule",
        "selector": "^&-"
      },
      {
        "type": "rule",
        "selector": "^."
      }
    ]
  }
}
